			<text text-anchor="start" dominant-baseline="middle" x="{{150*(n-1) + 10}}" y="125" fill="var(--{{color}}-{{textZ}})">{{color}}-{{n}}</text>
		{% endfor %}
		{% for n in range(1,8) %}
