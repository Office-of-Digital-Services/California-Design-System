			<rect width="150" height="30" y="160" x="{{150*(n-1)}}" fill="var(--{{color}}-{{n}}-light)" />
			<text text-anchor="start" dominant-baseline="middle" x="{{150*(n-1) + 10}}" y="175" fill="var(--{{color}}-{{textZ}})">{{color}}-{{n}}-light</text>
