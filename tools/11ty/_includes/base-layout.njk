{% extends "blank-page.njk" %}

{% block content %}

<ca-layout format=""> 
	<header>
		<ca-burger>
			<a href="#content-nav" title="Menu" class="ca-button ca-button-burger">
				<ca-icon name="pancakes-menu"></ca-icon>
				<ca-tip>Menu</ca-tip>
			</a>
		</ca-burger>

		<ca-org>
      <a href="/">
        <ca-pic slot="org-img" emblem="ca.gov" aria-label="ca.gov"></ca-pic>
        <span slot="org-cal">California</span>
        <span slot="org-dept">Design System</span>
      </a>
    </ca-org>

		<search slot="header-priority">
			<form>
				<label for="site-search" class="visually-hidden">Search this site</label>
				<input type="search" id="site-search" placeholder="Search" />
				<button type="submit">
					<ca-icon name="search"></ca-icon>
					<span class="visually-hidden">Search</span>
				</button>
			</form>
		</search>

		<nav id="utility-nav" slot="header-utility" aria-label="Utility navigation">
			<ul>
				<li>
					<ca-layout-toggle></ca-layout-toggle>
				</li>
        <li>
          <ca-color-scheme-toggle>
            <button class="ca-button ca-button-utility">
              <ca-icon name="light-mode"></ca-icon>
              <ca-tip>Dark or light mode</ca-tip>
            </button>
          </ca-color-scheme-toggle>
        </li>
        <li>
          <a href="#" title="Login" class="ca-button ca-button-utility">
            <ca-icon name="account"></ca-icon>
            <ca-tip>Login</ca-tip>
          </a>
        </li>
			</ul>
		</nav>

		<nav id="content-nav" slot="header-menu" aria-label="Content navigation">
			<menu>
				<li><a href="/pages/get-started">Get started</a></li>
				<li>
					<ca-pop>
						<button class="ca-button-menu" slot="pop-button">
							Components 
							<ca-icon name="arrow-down"></ca-icon>
						</button>
						<menu slot="pop-content">
						{% for page in collections.components %}
							<li>
								<a href="{{page.url}}">{{page.data.title}}</a>
							</li>
						{% endfor %}
						</menu>
					</ca-pop>
				</li>
				<li>
					<a href="/pages/color-alt">Color alt</a>
				</li>
			</menu>
		</nav>
	</header>

	<main>
    {{ content | safe }} 
  </main>

	<footer>
    <ca-box columns="5" gap="6" size="large" format="site-links">
      <ca-column span="2">
        <ca-org>
          <a href="/">
            <ca-pic slot="org-img" emblem="ca.gov" aria-label="ca.gov"></ca-pic>
            <span slot="org-cal">California</span>
            <span slot="org-dept">Department Website Long Name</span>
          </a>
        </ca-org>
      </ca-column>

      <ca-mesh class="ca-span-3" gap="6">
        <section>
          <h2>Footer column heading</h2>
          <ul>
            <li><a href="#">Footer link</a></li>
            <li><a href="#">Footer link</a></li>
